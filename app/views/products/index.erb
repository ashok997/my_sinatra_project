<h1>All Products</h1>

<form action="/products" method="get">
  <input type ="text" name="search" value=""></br>
  <input type ="submit" name="" value="Search Product"></br>
</form>

<% @products.each do |product| %>
  <div class ="grid-container">
    <div class="grid-item"> 
      <li> Title :<%= product.title %> </li>
      <li> Price($) :<%= product.price %> </li>
      <li> Sold By : <%=product.user.name  %> </li>
      <li><a href = "/products/<%=product.id%>">Details </a> </li>
      </br>
    </div>
  </div>
<% end %>

<h3><a href = "/"> Back to welcome page</a></h3
